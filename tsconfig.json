{
  "compilerOptions": {
    "target": "es6",
    "module": "ES6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "downlevelIteration": true,
    "outDir": "./dist",
    "declaration": true
  },
  "include": [
    "src/*"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
